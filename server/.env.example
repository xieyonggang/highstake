# Only 1 API key needed!
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Optional overrides (all have sensible defaults)
# DATABASE_URL=sqlite+aiosqlite:///./highstake.db
# STORAGE_DIR=./data
# TTS_VOICE_MODERATOR=Kore
# TTS_VOICE_SKEPTIC=Charon
# TTS_VOICE_ANALYST=Leda
# TTS_VOICE_CONTRARIAN=Orus
# CORS_ORIGINS=["http://localhost:3000"]
# DEBUG=false
# Minimum words of presenter speech before agents start evaluating (default: 50)
AGENT_WARMUP_WORDS=5

# TTS backend: "gemini" (cloud) or "kokoro" (local, no API key needed)
# TTS_BACKEND=kokoro

# STT backend: "gemini" (cloud) or "whisper" (local, no API key needed)
# STT_BACKEND=whisper

# Whisper model size for local STT (default: base.en)
# Options: tiny.en, base.en, small.en, medium.en, large-v3
# WHISPER_MODEL=base.en